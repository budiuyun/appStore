{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "workloadType": {
      "type": "string",
      "title": "工作负载类型",
      "description": "Kubernetes工作负载类型",
      "default": "Deployment",
      "enum": [
        "Deployment",
        "StatefulSet"
      ]
    },
    "replicaCount": {
      "type": "integer",
      "title": "副本数量",
      "description": "部署的副本数量",
      "default": 1,
      "minimum": 1
    },
    "image": {
      "type": "object",
      "title": "镜像配置",
      "properties": {
        "imageRegistry": {
          "type": "string",
          "title": "镜像仓库地址",
          "description": "镜像仓库地址",
          "default": "docker.io"
        },
        "repository": {
          "type": "string",
          "title": "镜像名称",
          "description": "镜像名称",
          "default": "collabora/code"
        },
        "tag": {
          "type": "string",
          "title": "镜像标签",
          "description": "镜像标签",
          "default": "24.04.10.2.1"
        },
        "pullPolicy": {
          "type": "string",
          "title": "镜像拉取策略",
          "description": "镜像拉取策略",
          "default": "IfNotPresent",
          "enum": [
            "Always",
            "IfNotPresent",
            "Never"
          ]
        }
      }
    },
    "service": {
      "type": "object",
      "title": "服务配置",
      "properties": {
        "type": {
          "type": "string",
          "title": "服务类型",
          "description": "服务类型",
          "default": "ClusterIP",
          "enum": [
            "ClusterIP",
            "NodePort",
            "LoadBalancer"
          ]
        },
        "ports": {
          "type": "object",
          "title": "端口配置",
          "description": "服务端口配置",
          "properties": {
            "http": {
              "type": "integer",
              "title": "HTTP端口",
              "description": "Web界面端口",
              "default": 9980
            }
          }
        }
      }
    },
    "networkLimits": {
      "type": "object",
      "title": "网络限制",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用网络限制",
          "description": "是否启用网络限制",
          "default": true
        },
        "egress": {
          "type": "string",
          "title": "出站限制",
          "description": "出站网络带宽限制",
          "default": "1M"
        },
        "ingress": {
          "type": "string",
          "title": "入站限制",
          "description": "入站网络带宽限制",
          "default": "1M"
        }
      }
    },
    "resources": {
      "type": "object",
      "title": "资源配置",
      "properties": {
        "limits": {
          "type": "object",
          "title": "资源限制",
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU限制",
              "description": "CPU资源限制",
              "default": "1000m"
            },
            "memory": {
              "type": "string",
              "title": "内存限制",
              "description": "内存资源限制",
              "default": "2000Mi"
            },
            "ephemeral-storage": {
              "type": "string",
              "title": "临时存储限制",
              "description": "临时存储资源限制",
              "default": "2Gi"
            }
          }
        },
        "requests": {
          "type": "object",
          "title": "资源请求",
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU请求",
              "description": "CPU资源请求",
              "default": "300m"
            },
            "memory": {
              "type": "string",
              "title": "内存请求",
              "description": "内存资源请求",
              "default": "512Mi"
            },
            "ephemeral-storage": {
              "type": "string",
              "title": "临时存储请求",
              "description": "临时存储资源请求",
              "default": "1Gi"
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "title": "持久化配置",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用持久化",
          "description": "是否启用持久化存储",
          "default": true
        },
        "size": {
          "type": "string",
          "title": "存储大小",
          "description": "持久化存储大小",
          "default": "2Gi"
        },
        "accessMode": {
          "type": "string",
          "title": "访问模式",
          "description": "持久化存储访问模式",
          "default": "ReadWriteOnce",
          "enum": [
            "ReadWriteOnce",
            "ReadOnlyMany",
            "ReadWriteMany"
          ]
        },
        "storageClass": {
          "type": "string",
          "title": "存储类",
          "description": "持久化存储类",
          "default": "local"
        },
        "mounts": {
          "type": "array",
          "title": "挂载点",
          "description": "持久化存储挂载点",
          "items": {
            "type": "string"
          },
          "default": [
            "/var/lib/coolwsd"
          ]
        }
      }
    },
    "env": {
      "type": "object",
      "title": "环境变量",
      "properties": {
        "env1": {
          "type": "object",
          "title": "时区",
          "properties": {
            "name": {
              "type": "string",
              "title": "变量名",
              "description": "环境变量名",
              "default": "TZ"
            },
            "value": {
              "type": "string",
              "title": "变量值",
              "description": "环境变量值",
              "default": "Asia/Shanghai"
            },
            "description": {
              "type": "string",
              "title": "描述",
              "description": "环境变量描述",
              "default": "时区设置"
            },
            "title": {
              "type": "string",
              "title": "标题",
              "description": "环境变量标题",
              "default": "时区"
            }
          }
        },
        "env2": {
          "type": "object",
          "title": "额外参数",
          "properties": {
            "name": {
              "type": "string",
              "title": "变量名",
              "description": "环境变量名",
              "default": "extra_params"
            },
            "value": {
              "type": "string",
              "title": "变量值",
              "description": "环境变量值",
              "default": "--o:ssl.enable=false"
            },
            "description": {
              "type": "string",
              "title": "描述",
              "description": "环境变量描述",
              "default": "额外参数"
            },
            "title": {
              "type": "string",
              "title": "标题",
              "description": "环境变量标题",
              "default": "额外参数"
            }
          }
        },
        "env3": {
          "type": "object",
          "title": "域名别名组",
          "properties": {
            "name": {
              "type": "string",
              "title": "变量名",
              "description": "环境变量名",
              "default": "aliasgroup1"
            },
            "value": {
              "type": "string",
              "title": "变量值",
              "description": "环境变量值",
              "default": "https://.*:443"
            },
            "description": {
              "type": "string",
              "title": "描述",
              "description": "环境变量描述",
              "default": "域名别名组"
            },
            "title": {
              "type": "string",
              "title": "标题",
              "description": "环境变量标题",
              "default": "域名别名组"
            }
          }
        }
      }
    },
    "command": {
      "type": "object",
      "title": "命令配置",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用自定义命令",
          "description": "是否启用自定义命令",
          "default": true
        },
        "value": {
          "type": "string",
          "title": "命令内容",
          "description": "自定义命令内容",
          "default": "/bin/bash\n-c\ncurl -o /usr/share/coolwsd/browser/dist/branding-desktop.css https://gist.githubusercontent.com/mickael-kerjean/bc1f57cd312cf04731d30185cc4e7ba2/raw/d706dcdf23c21441e5af289d871b33defc2770ea/destop.css\n/bin/su -s /bin/bash -c '/start-collabora-online.sh' cool"
        }
      }
    },
    "extraVolumeMounts": {
      "type": "array",
      "title": "额外挂载卷",
      "description": "额外的卷挂载配置",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "卷名称",
            "description": "卷的名称"
          },
          "mountPath": {
            "type": "string",
            "title": "挂载路径",
            "description": "卷在容器中的挂载路径"
          },
          "readOnly": {
            "type": "boolean",
            "title": "只读",
            "description": "卷是否为只读",
            "default": false
          }
        }
      }
    },
    "extraVolumes": {
      "type": "array",
      "title": "额外卷",
      "description": "额外的卷配置",
      "items": {
        "type": "object"
      }
    },
    "icon": {
      "type": "string",
      "title": "图标",
      "description": "应用图标URL"
    }
  }
}