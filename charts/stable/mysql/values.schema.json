{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": [
    "image",
    "service",
    "persistence"
  ],
  "properties": {
    "replicaCount": {
      "type": "integer",
      "title": "副本数量",
      "description": "MySQL应用部署的Pod副本数",
      "minimum": 1,
      "default": 1
    },
    "image": {
      "type": "object",
      "required": [
        "imageRegistry",
        "repository",
        "tag"
      ],
      "title": "镜像配置",
      "description": "容器镜像配置",
      "properties": {
        "imageRegistry": {
          "type": "string",
          "title": "镜像仓库地址",
          "description": "镜像仓库的域名",
          "default": "docker.io"
        },
        "repository": {
          "type": "string",
          "title": "镜像名称",
          "description": "镜像的名称，不包含仓库地址和标签",
          "default": "mysql"
        },
        "tag": {
          "type": "string",
          "title": "镜像标签",
          "description": "镜像的标签，通常对应应用程序版本",
          "default": "8.0"
        },
        "pullPolicy": {
          "type": "string",
          "title": "镜像拉取策略",
          "description": "Kubernetes的镜像拉取策略，出于安全和性能考虑，只允许使用IfNotPresent",
          "enum": [
            "IfNotPresent",
            "Always"
          ],
          "default": "IfNotPresent"
        }
      }
    },
    "service": {
      "type": "object",
      "required": [
        "type",
        "ports"
      ],
      "title": "服务配置",
      "description": "Kubernetes Service资源配置",
      "properties": {
        "type": {
          "type": "string",
          "title": "服务类型",
          "description": "Kubernetes服务类型，必须是ClusterIP",
          "enum": [
            "ClusterIP"
          ],
          "default": "ClusterIP"
        },
        "ports": {
          "type": "object",
          "title": "服务端口配置",
          "description": "MySQL服务端口配置",
          "properties": {
            "port1": {
              "type": "integer",
              "title": "MySQL服务端口",
              "description": "MySQL服务暴露的端口",
              "minimum": 1,
              "maximum": 65535,
              "default": 3306
            }
          }
        }
      }
    },
    "networkLimits": {
      "type": "object",
      "required": [
        "enabled",
        "egress",
        "ingress"
      ],
      "title": "网络带宽限制",
      "description": "Pod网络带宽限制配置",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用网络限制",
          "description": "是否启用网络带宽限制",
          "default": true
        },
        "egress": {
          "type": "string",
          "title": "出站带宽限制",
          "description": "出站流量带宽限制，格式为数字+单位(K,M,G)",
          "pattern": "^[0-9]+[KMG]$",
          "default": "1M"
        },
        "ingress": {
          "type": "string",
          "title": "入站带宽限制",
          "description": "入站流量带宽限制，格式为数字+单位(K,M,G)",
          "pattern": "^[0-9]+[KMG]$",
          "default": "1M"
        }
      }
    },
    "resources": {
      "type": "object",
      "title": "资源配置",
      "description": "容器资源请求和限制",
      "properties": {
        "limits": {
          "type": "object",
          "title": "资源限制",
          "description": "容器资源使用上限",
          "properties": {
            "cpu": {
              "type": [
                "string",
                "null"
              ],
              "title": "CPU限制",
              "description": "CPU资源限制，可以是m(千分之一核)或直接的核心数，留空表示无限制",
              "pattern": "^[0-9]+m?$|^$",
              "default": "500m"
            },
            "memory": {
              "type": [
                "string",
                "null"
              ],
              "title": "内存限制",
              "description": "内存资源限制，可以是Mi(兆字节)或Gi(吉字节)，留空表示无限制",
              "pattern": "^[0-9]+(Mi|Gi)$|^$",
              "default": "512Mi"
            }
          }
        },
        "requests": {
          "type": "object",
          "title": "资源请求",
          "description": "容器需要的最小资源量",
          "properties": {
            "cpu": {
              "type": [
                "string",
                "null"
              ],
              "title": "CPU请求",
              "description": "CPU资源请求，单位同上，留空表示无限制",
              "pattern": "^[0-9]+m?$|^$",
              "default": "200m"
            },
            "memory": {
              "type": [
                "string",
                "null"
              ],
              "title": "内存请求",
              "description": "内存资源请求，单位同上，留空表示无限制",
              "pattern": "^[0-9]+(Mi|Gi)$|^$",
              "default": "256Mi"
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "required": [
        "enabled",
        "path",
        "size"
      ],
      "title": "持久化存储",
      "description": "数据持久化配置",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用持久化",
          "description": "是否启用持久化存储",
          "default": true
        },
        "path": {
          "type": "string",
          "title": "挂载路径",
          "description": "数据持久化的容器内挂载路径",
          "default": "/var/lib/mysql"
        },
        "accessMode": {
          "type": "string",
          "title": "访问模式",
          "description": "PVC的访问模式",
          "enum": [
            "ReadWriteOnce",
            "ReadOnlyMany",
            "ReadWriteMany"
          ],
          "default": "ReadWriteOnce"
        },
        "size": {
          "type": "string",
          "title": "存储大小",
          "description": "PVC请求的存储大小",
          "pattern": "^[0-9]+(Mi|Gi|Ti)$",
          "default": "5Gi"
        },
        "storageClass": {
          "type": "string",
          "title": "存储类",
          "description": "使用的存储类名称",
          "default": "local"
        }
      }
    },
    "env": {
      "type": "object",
      "title": "环境变量",
      "description": "MySQL容器的环境变量配置",
      "properties": {
        "env1": {
          "type": "object",
          "title": "Root密码",
          "description": "MySQL root用户的密码",
          "properties": {
            "name": {
              "type": "string",
              "title": "变量名称",
              "default": "MYSQL_ROOT_PASSWORD"
            },
            "value": {
              "type": "string",
              "title": "变量值",
              "default": "root"
            }
          }
        },
        "env2": {
          "type": "object",
          "title": "数据库名",
          "description": "默认创建的数据库名称",
          "properties": {
            "name": {
              "type": "string",
              "title": "变量名称",
              "default": "MYSQL_DATABASE"
            },
            "value": {
              "type": "string",
              "title": "变量值",
              "default": "mydb"
            }
          }
        },
        "env3": {
          "type": "object",
          "title": "用户名",
          "description": "MySQL普通用户名",
          "properties": {
            "name": {
              "type": "string",
              "title": "变量名称",
              "default": "MYSQL_USER"
            },
            "value": {
              "type": "string",
              "title": "变量值",
              "default": "user"
            }
          }
        },
        "env4": {
          "type": "object",
          "title": "用户密码",
          "description": "MySQL普通用户密码",
          "properties": {
            "name": {
              "type": "string",
              "title": "变量名称",
              "default": "MYSQL_PASSWORD"
            },
            "value": {
              "type": "string",
              "title": "变量值",
              "default": "password"
            }
          }
        }
      }
    }
  }
}