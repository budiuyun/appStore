{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "workloadType": {
      "type": "string",
      "title": "工作负载类型",
      "description": "Kubernetes工作负载类型",
      "default": "Deployment",
      "enum": [
        "Deployment",
        "StatefulSet"
      ]
    },
    "replicaCount": {
      "type": "integer",
      "title": "副本数量",
      "description": "部署的副本数量",
      "default": 1,
      "minimum": 1
    },
    "image": {
      "type": "object",
      "title": "镜像配置",
      "properties": {
        "imageRegistry": {
          "type": "string",
          "title": "镜像仓库地址",
          "description": "镜像仓库地址",
          "default": "docker.io"
        },
        "repository": {
          "type": "string",
          "title": "镜像名称",
          "description": "镜像名称",
          "default": "adguard/adguardhome"
        },
        "tag": {
          "type": "string",
          "title": "镜像标签",
          "description": "镜像标签",
          "default": "latest"
        },
        "pullPolicy": {
          "type": "string",
          "title": "镜像拉取策略",
          "description": "镜像拉取策略",
          "default": "IfNotPresent",
          "enum": [
            "Always",
            "IfNotPresent",
            "Never"
          ]
        }
      }
    },
    "service": {
      "type": "object",
      "title": "服务配置",
      "properties": {
        "type": {
          "type": "string",
          "title": "服务类型",
          "description": "服务类型",
          "default": "ClusterIP",
          "enum": [
            "ClusterIP",
            "NodePort",
            "LoadBalancer"
          ]
        },
        "ports": {
          "type": "object",
          "title": "端口配置",
          "description": "服务端口配置",
          "properties": {
            "dns-tcp": {
              "type": "integer",
              "title": "DNS TCP端口",
              "description": "DNS TCP服务端口",
              "default": 53
            },
            "http": {
              "type": "integer",
              "title": "HTTP端口",
              "description": "Web管理界面端口",
              "default": 3000
            }
          }
        },
        "udpPorts": {
          "type": "array",
          "title": "UDP端口配置",
          "description": "UDP服务端口配置",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "title": "端口名称",
                "description": "UDP端口名称"
              },
              "port": {
                "type": "integer",
                "title": "端口号",
                "description": "UDP端口号"
              },
              "protocol": {
                "type": "string",
                "title": "协议",
                "description": "端口协议",
                "default": "UDP"
              }
            }
          }
        }
      }
    },
    "networkLimits": {
      "type": "object",
      "title": "网络限制",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用网络限制",
          "description": "是否启用网络限制",
          "default": true
        },
        "egress": {
          "type": "string",
          "title": "出站限制",
          "description": "出站网络带宽限制",
          "default": "1M"
        },
        "ingress": {
          "type": "string",
          "title": "入站限制",
          "description": "入站网络带宽限制",
          "default": "1M"
        }
      }
    },
    "resources": {
      "type": "object",
      "title": "资源配置",
      "properties": {
        "limits": {
          "type": "object",
          "title": "资源限制",
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU限制",
              "description": "CPU资源限制",
              "default": "1000m"
            },
            "memory": {
              "type": "string",
              "title": "内存限制",
              "description": "内存资源限制",
              "default": "1000Mi"
            },
            "ephemeral-storage": {
              "type": "string",
              "title": "临时存储限制",
              "description": "临时存储资源限制",
              "default": "2Gi"
            }
          }
        },
        "requests": {
          "type": "object",
          "title": "资源请求",
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU请求",
              "description": "CPU资源请求",
              "default": "100m"
            },
            "memory": {
              "type": "string",
              "title": "内存请求",
              "description": "内存资源请求",
              "default": "128Mi"
            },
            "ephemeral-storage": {
              "type": "string",
              "title": "临时存储请求",
              "description": "临时存储资源请求",
              "default": "500Mi"
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "title": "持久化配置",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用持久化",
          "description": "是否启用持久化存储",
          "default": true
        },
        "size": {
          "type": "string",
          "title": "存储大小",
          "description": "持久化存储大小",
          "default": "2Gi"
        },
        "accessMode": {
          "type": "string",
          "title": "访问模式",
          "description": "持久化存储访问模式",
          "default": "ReadWriteOnce",
          "enum": [
            "ReadWriteOnce",
            "ReadOnlyMany",
            "ReadWriteMany"
          ]
        },
        "storageClass": {
          "type": "string",
          "title": "存储类",
          "description": "持久化存储类",
          "default": "local"
        },
        "mounts": {
          "type": "array",
          "title": "挂载点",
          "description": "持久化存储挂载点",
          "items": {
            "type": "string"
          },
          "default": [
            "/opt/adguardhome/work"
          ]
        }
      }
    },
    "env": {
      "type": "object",
      "title": "环境变量",
      "properties": {
        "env1": {
          "type": "object",
          "title": "时区",
          "properties": {
            "name": {
              "type": "string",
              "title": "变量名",
              "description": "环境变量名",
              "default": "TZ"
            },
            "value": {
              "type": "string",
              "title": "变量值",
              "description": "环境变量值",
              "default": "Asia/Shanghai"
            },
            "description": {
              "type": "string",
              "title": "描述",
              "description": "环境变量描述",
              "default": "时区设置"
            },
            "title": {
              "type": "string",
              "title": "标题",
              "description": "环境变量标题",
              "default": "时区"
            }
          }
        }
      }
    },
    "extraVolumeMounts": {
      "type": "array",
      "title": "额外挂载卷",
      "description": "额外的卷挂载配置",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "卷名称",
            "description": "卷的名称"
          },
          "mountPath": {
            "type": "string",
            "title": "挂载路径",
            "description": "卷在容器中的挂载路径"
          },
          "readOnly": {
            "type": "boolean",
            "title": "只读",
            "description": "卷是否为只读",
            "default": false
          }
        }
      }
    },
    "extraVolumes": {
      "type": "array",
      "title": "额外卷",
      "description": "额外的卷配置",
      "items": {
        "type": "object"
      }
    },
    "icon": {
      "type": "string",
      "title": "图标",
      "description": "应用图标URL"
    }
  }
}