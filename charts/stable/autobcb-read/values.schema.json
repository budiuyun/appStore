{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "title": "autobcb-read Helm Chart 配置",
  "required": [
    "workloadType",
    "replicaCount",
    "image",
    "service",
    "networkLimits",
    "resources"
  ],
  "properties": {
    "workloadType": {
      "type": "string",
      "title": "工作负载类型",
      "description": "指定部署为有状态集(StatefulSet)或无状态部署(Deployment)",
      "enum": [
        "Deployment",
        "StatefulSet"
      ],
      "default": "Deployment"
    },
    "replicaCount": {
      "type": "integer",
      "title": "副本数量",
      "description": "Deployment的副本数量",
      "default": 1,
      "minimum": 1
    },
    "image": {
      "type": "object",
      "title": "容器镜像",
      "required": [
        "repository",
        "tag",
        "pullPolicy"
      ],
      "properties": {
        "imageRegistry": {
          "type": "string",
          "title": "镜像仓库地址",
          "description": "容器镜像的仓库地址",
          "default": "docker-0.unsee.tech"
        },
        "repository": {
          "type": "string",
          "title": "镜像名称",
          "description": "容器镜像的名称",
          "default": "bitnami/java"
        },
        "tag": {
          "type": "string",
          "title": "镜像标签",
          "description": "容器镜像的标签",
          "default": "latest"
        },
        "pullPolicy": {
          "type": "string",
          "title": "镜像拉取策略",
          "description": "镜像拉取策略，只能是IfNotPresent",
          "enum": [
            "IfNotPresent"
          ],
          "default": "IfNotPresent"
        }
      }
    },
    "service": {
      "type": "object",
      "title": "服务配置",
      "required": [
        "type",
        "ports"
      ],
      "properties": {
        "type": {
          "type": "string",
          "title": "服务类型",
          "description": "Kubernetes服务类型",
          "enum": [
            "ClusterIP"
          ],
          "default": "ClusterIP"
        },
        "ports": {
          "type": "array",
          "title": "服务端口配置",
          "description": "服务暴露的端口配置",
          "items": {
            "type": "object",
            "title": "端口配置",
            "required": [
              "name",
              "port",
              "protocol"
            ],
            "properties": {
              "name": {
                "type": "string",
                "title": "端口名称",
                "description": "服务端口名称"
              },
              "port": {
                "type": "integer",
                "title": "端口号",
                "description": "服务端口号",
                "minimum": 1,
                "maximum": 65535
              },
              "protocol": {
                "type": "string",
                "title": "协议",
                "description": "端口协议",
                "enum": [
                  "TCP",
                  "UDP"
                ],
                "default": "TCP"
              }
            }
          },
          "examples": [
            [
              {
                "name": "http",
                "port": 8080,
                "protocol": "TCP"
              }
            ]
          ]
        }
      }
    },
    "networkLimits": {
      "type": "object",
      "title": "网络带宽限制",
      "required": [
        "enabled",
        "egress",
        "ingress"
      ],
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用网络带宽限制",
          "description": "是否启用网络带宽限制",
          "default": true
        },
        "egress": {
          "type": "string",
          "title": "出站带宽限制",
          "description": "容器出站带宽限制，格式为数字+K/M/G，例如1M",
          "default": "1M",
          "pattern": "^[0-9]+[KMG]$"
        },
        "ingress": {
          "type": "string",
          "title": "入站带宽限制",
          "description": "容器入站带宽限制，格式为数字+K/M/G，例如1M",
          "default": "1M",
          "pattern": "^[0-9]+[KMG]$"
        }
      }
    },
    "resources": {
      "type": "object",
      "title": "资源配置",
      "required": [
        "limits",
        "requests"
      ],
      "properties": {
        "limits": {
          "type": "object",
          "title": "资源限制",
          "required": [
            "cpu",
            "memory"
          ],
          "properties": {
            "cpu": {
              "type": [
                "string",
                "null"
              ],
              "title": "CPU限制",
              "description": "CPU资源限制，可以是m或核心数，留空表示无限制",
              "pattern": "^[0-9]+m?$|^$",
              "default": "1000m"
            },
            "memory": {
              "type": [
                "string",
                "null"
              ],
              "title": "内存限制",
              "description": "内存资源限制，可以是Mi或Gi，留空表示无限制",
              "pattern": "^[0-9]+(Mi|Gi)$|^$",
              "default": "2000Mi"
            },
            "ephemeral-storage": {
              "type": [
                "string",
                "null"
              ],
              "title": "临时存储限制",
              "description": "临时存储资源限制，可以是Mi或Gi",
              "pattern": "^[0-9]+(Mi|Gi)$|^$",
              "default": "5Gi"
            }
          }
        },
        "requests": {
          "type": "object",
          "title": "资源请求",
          "required": [
            "cpu",
            "memory"
          ],
          "properties": {
            "cpu": {
              "type": [
                "string",
                "null"
              ],
              "title": "CPU请求",
              "description": "CPU资源请求，可以是m或核心数，留空表示无限制",
              "pattern": "^[0-9]+m?$|^$",
              "default": "500m"
            },
            "memory": {
              "type": [
                "string",
                "null"
              ],
              "title": "内存请求",
              "description": "内存资源请求，可以是Mi或Gi，留空表示无限制",
              "pattern": "^[0-9]+(Mi|Gi)$|^$",
              "default": "500Mi"
            },
            "ephemeral-storage": {
              "type": [
                "string",
                "null"
              ],
              "title": "临时存储请求",
              "description": "临时存储资源请求，可以是Mi或Gi",
              "pattern": "^[0-9]+(Mi|Gi)$|^$",
              "default": "1Gi"
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "title": "持久化存储配置",
      "required": [
        "enabled",
        "size",
        "accessMode"
      ],
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用持久化存储",
          "description": "是否启用持久化存储",
          "default": true
        },
        "size": {
          "type": "string",
          "title": "存储大小",
          "description": "持久化存储大小，可以是Mi或Gi",
          "default": "5Gi",
          "pattern": "^[0-9]+(Mi|Gi)$"
        },
        "accessMode": {
          "type": "string",
          "title": "访问模式",
          "description": "持久化存储访问模式",
          "enum": [
            "ReadWriteOnce",
            "ReadOnlyMany",
            "ReadWriteMany"
          ],
          "default": "ReadWriteOnce"
        },
        "storageClass": {
          "type": "string",
          "title": "存储类",
          "description": "持久化存储类",
          "default": "local"
        },
        "mounts": {
          "type": "array",
          "title": "挂载路径",
          "description": "持久化存储挂载路径",
          "items": {
            "type": "string",
            "title": "挂载路径",
            "description": "持久化存储挂载路径"
          },
          "default": [
            "/app"
          ]
        }
      }
    },
    "env": {
      "type": "object",
      "title": "环境变量配置",
      "additionalProperties": {
        "type": "object",
        "required": [
          "name",
          "value"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "环境变量名称",
            "description": "环境变量名称"
          },
          "value": {
            "type": "string",
            "title": "环境变量值",
            "description": "环境变量值"
          },
          "description": {
            "type": "string",
            "title": "环境变量描述",
            "description": "环境变量描述"
          },
          "title": {
            "type": "string",
            "title": "环境变量标题",
            "description": "环境变量标题"
          }
        }
      }
    },
    "command": {
      "type": "object",
      "title": "启动命令配置",
      "required": [
        "enabled",
        "value"
      ],
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用自定义命令",
          "description": "是否启用自定义命令",
          "default": true
        },
        "value": {
          "type": "string",
          "title": "自定义命令",
          "description": "自定义命令",
          "default": "java -jar /app/read.jar"
        }
      }
    },
    "extraVolumeMounts": {
      "type": "array",
      "title": "额外挂载配置",
      "description": "额外挂载配置",
      "items": {
        "type": "object",
        "title": "额外挂载",
        "description": "额外挂载",
        "required": [
          "name",
          "mountPath"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "挂载名称",
            "description": "挂载名称"
          },
          "mountPath": {
            "type": "string",
            "title": "挂载路径",
            "description": "挂载路径"
          },
          "readOnly": {
            "type": "boolean",
            "title": "只读",
            "description": "是否只读",
            "default": false
          }
        }
      }
    },
    "extraVolumes": {
      "type": "array",
      "title": "额外卷配置",
      "description": "额外卷配置",
      "items": {
        "type": "object",
        "title": "额外卷",
        "description": "额外卷",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "卷名称",
            "description": "卷名称"
          },
          "hostPath": {
            "type": "object",
            "title": "主机路径",
            "description": "主机路径",
            "required": [
              "path"
            ],
            "properties": {
              "path": {
                "type": "string",
                "title": "路径",
                "description": "路径"
              }
            }
          }
        }
      }
    }
  }
}